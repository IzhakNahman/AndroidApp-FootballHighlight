<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/highlightItem_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDFFFFFF">

        <TextView
            android:id="@+id/highlightItem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:text="Manchester United - Club Brugge"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/highlightItem_competition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/highlightItem_ivImage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/highlightItem_ivImage"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/football" />

        <TextView
            android:id="@+id/highlightItem_competition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="EUROPA LEAGUE: 1/16 Final"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/highlightItem_date"
            app:layout_constraintEnd_toEndOf="@+id/highlightItem_title"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/highlightItem_title"
            app:layout_constraintTop_toBottomOf="@+id/highlightItem_title" />

        <TextView
            android:id="@+id/highlightItem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="date"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/highlightItem_competition"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/highlightItem_competition"
            app:layout_constraintTop_toBottomOf="@+id/highlightItem_competition" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>